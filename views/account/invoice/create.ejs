<% include ../../partials/head %>
<% include ../../partials/header %>
<div class="sub-banner overview-bgi">
    <div class="container">
        <div class="breadcrumb-area">
            <h1>Submit Invoice</h1>
            <ul class="breadcrumbs">
                <li><a href="/">Home</a></li>
                <li class="active">Submit Invoice</li>
            </ul>
        </div>
    </div>
</div>
<div class="user-page content-area-7">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
              <div class="search-area contact-2"><a href="/invoice">
                    </a><div class="search-area-inner"><a href="">
                        </a><div class="search-contents "><a href="/invoice">
                            </a><form  action="/invoice" method="POST">
                                <h3 class="heading">Invoice Details</h3>
                                <div class="row mb-50">
                                    <div class="col-lg-4 col-md-6">
                                        <div class="form-group">
                                            <label>Company Name</label>
                                            <input type="text" name="companyName" class="form-control" placeholder="Company Name">
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-6">
                                        <div class="form-group">
                                            <label>Registration Number</label>
                                            <input type="text" name="regNumber" class="form-control" placeholder="RC Number">
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-6">
                                        <div class="form-group">
                                            <label>Address</label>
                                            <input type="text" name="Address" class="form-control" placeholder="Address">
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-6">
                                        <div class="form-group">
                                            <label>Total Value of Invoice</label>
                                            <input type="text" name="value" class="form-control" placeholder="Amount">
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-6">
                                        <div class="form-group">
                                            <label>Invoice Date</label>
                                            <input type="date" name="dateIssued" class="form-control" placeholder="Invoice Date">
 
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-6">
                                        <div class="form-group">
                                                <label>Amount in words</label>
                                                <input type="number" name="amountInwords" class="form-control" placeholder="Amount">
     
                                           
                                        </div>
                                    </div>
                                </div>

                                <h3 class="heading">Upload Invoice here. </h3>
                                <div class="row mb-60">
                                    <div class="col-lg-12">
                                        <div id="myDropZone" class="dropzone dropzone-design dz-clickable">
                                            <div class="dz-default dz-message"><span><input type="file" hidden/>Drop files here to upload PDF, JPG, JPEG only</span></div>
                                        </div>
                                    </div>
                                </div>

                                <h3 class="heading">Issuer Details</h3>
                                <div class="row mb-50">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <label>Address</label>
                                            <input type="text" name="issuerAddress" class="form-control" placeholder="Address">
                                        </div>
                                    </div>
                                    <input type="hidden"  name="_csrf"  value="<%= _csrf %>">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <label>Contact person</label>
                                            <input type="text" name="issuerContactPerson" class="form-control" placeholder="contact Person">
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden"  name="_csrf"  value="<%= _csrf %>">
                                <h3 class="heading">Invoice Details</h3>
                                <div class="row mb-50">
                                    <div class="col-lg-12">
                                        <div class="form-group message">
                                            <label>Detailed Information</label>
                                            <textarea class="form-control" name="invoiceDetails" placeholder="Detailed Information"></textarea>
                                        </div>
                                    </div>
                                   
                                    
                                </div>
                                

                                    <div class="col-lg-12"><a href="">
                                        </a><button type="submit"  class="btn btn-md btn-color">Preview and Submit</button>
                                    </div>
                                </form></div>
                            
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

